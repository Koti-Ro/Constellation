<Page x:Class="Constellation.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Constellation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Height="45" Margin="246,110,0,0" VerticalAlignment="Top" Width="104" FontSize="20"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="30" Margin="355,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" FontSize="20"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Height="43" Margin="246,160,0,0" VerticalAlignment="Top" Width="104" FontSize="20"/>
        <TextBox x:Name="tbPass" HorizontalAlignment="Left" Height="30" Margin="355,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" FontSize="20"/>
        <Button x:Name="btnAutoriz" Content="Войти" HorizontalAlignment="Left" Height="45" Margin="243,225,0,0" VerticalAlignment="Top" Width="107" FontSize="20" Click="btnAutoriz_Click"/>
        <Button x:Name="btnExit" Content="Выйти" HorizontalAlignment="Left" Height="45" Margin="400,225,0,0" VerticalAlignment="Top" Width="101" FontSize="20" Click="btnExit_Click"/>

    </Grid>
</Page>
